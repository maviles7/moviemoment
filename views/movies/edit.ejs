<%- include('../partials/header.ejs') %>

<h1>Edit Movie</h1>

<form action="/movies/<%= movie._id %>?_method=PUT" method="POST">

    <label for="movie-title">Movie Title:</label>
    <input type="text" name="movieTitle" id="movie-title" value="<%= movie.movieTitle %>"/>

    <label for="date-watched">Date Watched:</label>
    <input type="date" name="dateWatched" id="date-watched" value="<%= movie.dateWatched %>"/>

    <label for="genre">Genre:</label>
    <select name="genre" id="genre">
        <% genres.forEach((genre) => { %>
            <option value="<%= genre %>"><%= genre %></option>
        <% }) %>
    </select>

    <label for="rating">Rating:</label>
    <select name="rating">
        <% ratings.forEach((rating) => { %>
            <option value="<%= rating %>"><%= rating %></option>
        <% }) %>
    </select>

    <label for="review">Review:</label>
    <textarea name="review" id="review" value="<%= movie.review %>"></textarea>

    <button type="submit">update movie!</button>
</form>

<%- include('../partials/footer.ejs') %>

